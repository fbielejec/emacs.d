# -*- mode: snippet -*-
# name: binary_search2
# key: <binary_search2
# --

    // finds first true element in a sorted array of boolean values
    let mut left = 0;
    let mut right = arr.len() - 1;
    let mut answer = -1;

    // edge/base cases, single element
    if arr.len() == 1 {
        if arr[0] {
            return 0;
        } else {
            return -1;
        }
    }

    while left <= right {
        let mid = (left + right) / 2;

        if arr[mid] && !arr[mid - 1] {
            // first true, return immediately
            return mid as i32;
        } else if !arr[mid] {
            // discard everything on the left of mid, including mid
            left = mid + 1;
        } else {
            // arr [mid ] == T
            // maybe the first index
            answer = mid as i32;
            right = mid - 1;
        }
    }

    answer