# -*- mode: snippet -*-
# name: intersect
# key: <intersect
# --

    // check if x and y intervals intesect
    let intersect = |x1: i32, x2: i32, y1: i32, y2: i32| -> bool {
        (x1 >= y1 && x1 <= y2)
            || (x2 >= y1 && x2 <= y2)
            || (y1 >= x1 && y1 <= x2)
            || (y2 >= x1 && y2 <= x2)
    };